<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:padding="10dp"
    android:layout_height="290dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chambre_image"
            android:src="@drawable/bg_appartement"
            android:layout_width="180dp"
            android:scaleType="centerCrop"
            android:layout_height="180dp"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:background="#81000000"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/chambre_image"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/line1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/chambre_name"
                    android:visibility="gone"
                    android:text="CitÃ© CEMAC"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_thin"
                    android:textColor="@color/blueSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/chambre_prix"
                    android:text="70.000 Fcfa/mois"
                    android:textSize="16sp"
                    android:fontFamily="@font/brandon_medium"
                    android:textColor="@color/blackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/chambre_quartier"
                    android:text="70.000 Fcfa/mois"
                    android:fontFamily="@font/brandon_medium"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


        </RelativeLayout>



</RelativeLayout>