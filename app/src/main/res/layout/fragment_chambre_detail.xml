<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chambre.detail.ChambreDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:fitsSystemWindows="true"
            app:contentScrim="#0e0d0e"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/chambre_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_appartement"
                    android:contentDescription="@null"
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:src="@drawable/bg_detail"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/chambre_nom"
                        android:layout_marginTop="14dp"
                        android:padding="12dp"
                        android:text="Nom chambre"
                        android:fontFamily="@font/roboto_medium"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/ic_map"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:padding="12dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:contentDescription="@string/mytodo" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RatingBar
                        android:id="@+id/ratingBar_restaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:isIndicator="true"/>

                    <TextView
                        android:id="@+id/chambre_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:justificationMode="inter_word"
                        android:text="Description"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/chambre_ville"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:justificationMode="inter_word"
                        android:text="Ville"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/chambre_quartier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:justificationMode="inter_word"
                        android:text="chambre_quartier"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/chambre_prix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:justificationMode="inter_word"
                        android:text="chambre_prix"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/chambre_mois"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:justificationMode="inter_word"
                        android:text="chambre_mois"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />


                    <TextView
                        android:id="@+id/chambre_responsable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:justificationMode="inter_word"
                        android:text="chambre_responsable"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/chambre_contact1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:justificationMode="inter_word"
                        android:text="chambre_contact1"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/chambre_contact2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:justificationMode="inter_word"
                        android:text="chambre_contact2"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/chambre_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="12dp"
                        android:justificationMode="inter_word"
                        android:text="chambre_email"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_thin"
                        android:text="size"
                        android:textSize="22sp"/>

                    <RadioGroup
                        android:id="@+id/rdi_groupe_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                android:visibility="gone"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_thin"
                            android:text="add_on"
                            android:textSize="22sp"/>

                        <ImageView
                            android:id="@+id/img_add_addon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/ic_add_box_black"
                            app:tint="@color/colorAccent"
                            android:layout_marginStart="4dp"
                            android:contentDescription="@string/todokl" />

                    </LinearLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_user_selected_addon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_rating"
        app:backgroundTint="@android:color/white"
        android:src="@drawable/ic_star_black"
        app:elevation="6dp"
        android:visibility="visible"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|start"
        app:pressedTranslationZ="12dp"
        app:useCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todoh" />

    <com.andremion.counterfab.CounterFab
        android:id="@+id/btn_call"
        android:visibility="gone"
        android:src="@drawable/ic_phone"
        app:backgroundTint="@android:color/white"
        app:elevation="6dp"
        app:layout_anchor="@id/app_bar_layout"
        android:layout_marginLeft="80dp"
        app:layout_anchorGravity="bottom"
        app:pressedTranslationZ="12dp"
        app:useCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>