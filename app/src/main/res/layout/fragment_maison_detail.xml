<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.maison.detail.MaisonDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:fitsSystemWindows="true"
            app:contentScrim="#0e0d0e"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/maison_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_appartement"
                    app:layout_collapseMode="parallax" />


            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brandon_medium"
                        android:padding="12dp"
                        android:text="Maison"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/maison_nom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt1"
                        android:fontFamily="@font/brandon_medium"
                        android:paddingLeft="12dp"
                        android:text="Nom maison"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maison_nom"
                        android:fontFamily="@font/brandon_medium"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:text="Prix : "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/maison_prix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maison_nom"
                        android:layout_toEndOf="@+id/text2"
                        android:layout_toRightOf="@+id/text2"
                        android:fontFamily="@font/brandon_medium"
                        android:justificationMode="inter_word"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:text="70.000 Fcfa / mois"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />


                    <TextView
                        android:id="@+id/maison_ville"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maison_prix"
                        android:fontFamily="@font/brandon_medium"
                        android:justificationMode="inter_word"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:text="Yaoundé"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/maison_quartier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/maison_prix"
                        android:layout_toRightOf="@+id/maison_ville"
                        android:fontFamily="@font/brandon_medium"
                        android:justificationMode="inter_word"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:text="Obili - Montée chapelle"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />


                    <TextView
                        android:id="@+id/maison_mois"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maison_ville"
                        android:fontFamily="@font/brandon_medium"
                        android:justificationMode="inter_word"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:text="12 Mois / (50 000 coution)"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/maison_mois"
                        android:fontFamily="@font/brandon_medium"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:text="Concierge : "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/maison_responsable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maison_mois"
                        android:layout_toEndOf="@+id/text3"
                        android:layout_toRightOf="@+id/text3"
                        android:fontFamily="@font/brandon_medium"
                        android:justificationMode="inter_word"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:text="POUM BIMBAR"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text3"
                        android:fontFamily="@font/brandon_medium"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:text="Contacts : "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/maison_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maison_responsable"
                        android:layout_toEndOf="@+id/text4"
                        android:layout_toRightOf="@+id/text4"
                        android:fontFamily="@font/brandon_medium"
                        android:justificationMode="inter_word"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:text="bimbare@gmail.com"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/maison_contact1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text4"
                        android:fontFamily="@font/brandon_medium"
                        android:justificationMode="inter_word"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="12dp"
                        android:text="+237 656 06 41 53"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <TextView
                        android:id="@+id/maison_contact2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text4"
                        android:layout_toEndOf="@+id/maison_contact1"
                        android:layout_toRightOf="@+id/maison_contact1"
                        android:fontFamily="@font/brandon_medium"
                        android:justificationMode="inter_word"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="12dp"
                        android:text="+237 656 06 41 53"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/maison_prix"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:contentDescription="@string/mytodo"
                        android:src="@drawable/ic_map" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <RatingBar
                android:id="@+id/ratingBar_restaurant"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/maison_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/brandon_medium"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:text="Description"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp"
                    tools:targetApi="o" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/brandon_medium"
                android:padding="10dp"
                android:text="Autres vues de la maison"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbarThumbHorizontal="@color/colorPrimaryDark">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/maison_image2"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:padding="12dp"
                        android:src="@drawable/bg_appartement" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/maison_image3"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:padding="12dp"
                        android:src="@drawable/bg_appartement" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/maison_image4"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:padding="12dp"
                        android:src="@drawable/bg_appartement" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/maison_image5"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:padding="12dp"
                        android:src="@drawable/bg_appartement" />


                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/brandon_medium"
                android:padding="15dp"
                android:text="Maisons similaires"
                android:textColor="@color/black"
                android:textSize="22sp" />


            <com.asksira.loopingviewpager.LoopingViewPager
                android:id="@+id/viewpager"
                app:isInfinite="true"
                app:autoScroll="true"
                app:scrollInterval="3000"
                app:viewpagerAspectRatio="1.33"
                android:scrollbarThumbHorizontal="@color/colorPrimaryDark"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_rating"
        app:backgroundTint="@android:color/white"
        android:src="@drawable/ic_star_black"
        app:elevation="6dp"
        android:visibility="visible"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="12dp"
        app:useCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todoh" />

    <com.andremion.counterfab.CounterFab
        android:id="@+id/btn_comment"
        android:src="@drawable/ic_comment"
        app:backgroundTint="@android:color/white"
        app:elevation="6dp"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|end"
        android:layout_marginRight="75dp"
        app:pressedTranslationZ="12dp"
        app:useCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>