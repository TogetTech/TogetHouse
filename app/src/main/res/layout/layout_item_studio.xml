<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/studio_image"
        android:src="@drawable/bg_appartement"
        android:layout_width="129dp"
        android:paddingBottom="15dp"
        android:layout_height="85dp"
        android:background="@drawable/bg_item_studio"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="129dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:background="@drawable/bg_item_studio"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/studio_name"
            android:text="CitÃ© CEMAC"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/studio_prix"
            android:text="70.000 Fcfa/mois"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:layout_below="@+id/studio_name"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/studio_quartier"
            android:text="70.000 Fcfa/mois"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/studio_prix"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</LinearLayout>