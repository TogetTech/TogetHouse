<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#00C9F8"
    android:gravity="center"
    tools:context=".LaunchActivity">


    <RelativeLayout
        android:id="@+id/ic_cards"
        android:layout_width="150dp"
        android:background="@drawable/bg_logo"
        android:padding="10dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/sun"
            android:src="@drawable/sun"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/house"
            android:src="@drawable/ic_house"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/headertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TogetHouse"
        android:fontFamily="@font/mmedium"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_centerInParent="true"
        android:layout_below="@id/headertitle"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Quickly find a home"
        android:fontFamily="@font/mlight"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="14dp"
        android:gravity="center_horizontal" />



    <LinearLayout
        android:id="@+id/parent_result"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/resultOne"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_btn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:src="@drawable/house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Découvrir"
                    android:fontFamily="@font/mlight"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/blueSecond"
                    android:textSize="12sp"
                    android:gravity="center_horizontal" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/resultTwo"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_btn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contrat"
                    android:gravity="center_horizontal" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contrat"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mlight"
                    android:textSize="12sp"
                    android:textColor="@color/blueSecond"
                    android:gravity="center_horizontal" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/resultThree"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_btn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:src="@drawable/cles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aménager"
                    android:fontFamily="@font/mlight"
                    android:textColor="@color/blueSecond"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_next"
        android:fontFamily="@font/mmedium"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_btn_primary"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="Continuer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="50dp"/>

</LinearLayout>